#!/bin/bash
# Linux Shell Contexts

if [ `hostname` == 'sensei-server' ]
then
    figlet 'Sensei Production Server'
    . env/bin/activate
    export p=$HOME
    
    which python
    python --version
    pip list
else
    export p=$HOME/Sensei
    figlet 'Sensei Dev'
fi

echo "p = $p"

. $p/bin/bash-alias
. $p/bin/bash-prompt

export PATH=$PATH:$p:$p/bin
echo "PATH = $PATH"

ls -l

