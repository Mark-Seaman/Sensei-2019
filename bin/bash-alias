alias vc='dj vc'

alias web='dj web'


# ------------------------------
# Functions

# function deploy {
#     vc commit $* &&
#     brain deploy $*
# }

function ce {
    cd $p && e `find . | grep $1.py`
}

function commit {
    git status &&
    git add . &&
    git commit -m "$*" &&
    git push
}

function d {
    d=$1
    [ "$1" == "" ] && d="$p"
    echo $d && cd $d && ls -al
}

# List the path in readable form
function path {
    echo $PATH | perl -pe s/:/\\n/g
}
