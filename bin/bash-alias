#!/bin/bash
# S2 Aliases

alias app='dj app'

alias b='brackets'

alias co='vc commit'
alias code='dj code'
alias console='ssh sensei@seamanfamily.org'

alias doc='dj doc'
alias deploy='o deploy'
alias dj='./manage.py'
alias ds='doc search'

alias ea='e $p/bin/bash*'

alias firefox='open /Applications/Firefox.app'

alias g='grep'
alias ga='git add -A'
alias gc='git commit -m'
alias gco='git checkout'
alias gd='vc diff'
alias gl='git log --name-only'
alias gs='vc status'

alias h='history 40'
alias host='hostname'

alias i='dj todo idea'
alias ip='ifconfig|grep "inet "'

alias l='ls -al'
alias le='less'
alias ll='ls -l'

alias o='dj ocean'

alias p='python'
alias pull='vc pull'
alias push='vc push'
alias py='figlet S2 Python&&which python&&python --version&&pip list&&echo directory is `pwd`'

alias qt='tst quick'
alias r=reset

alias s='code search .'
alias serve='web localhost:8000; dj runserver'

alias tlike='tst like'
alias tlist='tst list'
alias todo='dj todo'
alias tout='tst output'
alias tres='tst results|less'
alias trun='tst run'
alias tst='dj tst '

alias u='cd ..; l'

alias vc='dj vc'

alias web='dj web'


# ------------------------------
# Functions

function deploy {
    vc commit $* &&
    brain deploy $*
}

function ce {
    cd $p && e `find . | grep $1.py`
}

function commit {
    git status &&
    git add . &&
    git commit -m "$*" &&
    git push
}

function d {
    d=$1
    [ "$1" == "" ] && d="$p"
    echo $d && cd $d && ls -al
}

