alias docs='dj code search doc'
alias deploy='o deploy'
alias dj='./manage.py'
alias ds='doc search'

alias ea='e $p/bin/bash*'

alias firefox='open /Applications/Firefox.app'

alias g='grep'
alias ga='git add -A'
alias gc='git commit -m'
alias gco='git checkout'
alias gd='vc diff'
alias gl='vc log'
alias gs='vc status'

alias h='history 40'
alias html='dj code search html'
alias host='hostname'

alias i='dj todo idea'
alias ip='ifconfig|grep "inet "'

alias l='ls -al'
alias le='less'
alias ll='ls -l'
alias log='sys log'

alias n='cd ~/S1/bin && python ntsh.py'

alias o='dj ocean'

alias p='python'
alias pull='vc pull'
alias push='vc push'
alias py='figlet S2 Python&&which python&&python --version&&pip list&&echo directory is `pwd`'

alias qt='tst quick'
alias r=reset

alias s='code search .'
alias serve='web localhost:8000; dj runserver'
